<Window x:Class="MESSENGER.Server"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MESSENGER"
        mc:Ignorable="d"
        Title="Server" Height="450" Width="800">
    <Grid OpacityMask="Black" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="69*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="461*"/>
            <ColumnDefinition Width="170*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="366*"/>
            <RowDefinition Height="35*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="Soobshenia" HorizontalAlignment="Center" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center" Height="352" Width="456" Background="#FFF5F1F1" Foreground="#FF333131" Grid.Row="1" Grid.Column="3"/>
        <TextBlock x:Name="SpisokClientov" HorizontalAlignment="Center" Margin="0,8,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="221" Width="65" Background="#FFF1F1F1" Grid.Row="1" Grid.Column="1"/>

    </Grid>
</Window>
