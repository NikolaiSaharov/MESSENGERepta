<Window x:Class="MESSENGER.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MESSENGER"
        mc:Ignorable="d"
        Title="MainWindow" Height="304" Width="448">
    <Grid Margin="0,0,0,-6">
        <TextBox x:Name="IpBox" HorizontalAlignment="Center" Margin="0,29,0,0" TextWrapping="Wrap" Text="IP" VerticalAlignment="Top" Width="240" Height="39" BorderBrush="#FFC9CACC" TextChanged="IpBox_TextChanged"/>
        <Button Content="Создать новый чат" HorizontalAlignment="Center" Margin="0,86,0,0" VerticalAlignment="Top" Height="45" Width="240" Background="#FF9616D4" BorderBrush="#FF696666" Foreground="White" Click="Button_Click"/>
        <Button Content="Присоединиться к чату" HorizontalAlignment="Center" Margin="0,147,0,0" VerticalAlignment="Top" Height="47" Width="240" Background="#FF9616D4" Foreground="White" Click="Button_Click_1"/>
        <TextBox x:Name="NameBox" HorizontalAlignment="Center" Margin="0,217,0,0" TextWrapping="Wrap" Text="ИМЯ" VerticalAlignment="Top" Width="240" Height="39" BorderBrush="#FFD4D1D1" TextChanged="NameBox_TextChanged"/>

    </Grid>
</Window>
